<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Project to Display" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/hotkey3"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/hotkey3"
            android:layout_marginTop="26dp"
            android:hint="Enter Phrase Here"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/infoCard"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_above="@+id/infoCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp">

        </RelativeLayout>

        <Button
            android:id="@+id/hotkey1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_alignTop="@+id/relativeLayout"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toEndOf="@+id/hotkey1"
            android:layout_toRightOf="@+id/hotkey1"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toEndOf="@+id/hotkey2"
            android:layout_toRightOf="@+id/hotkey2"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_below="@+id/hotkey1"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/hotkey2"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/hotkey3"
            android:layout_toEndOf="@+id/hotkey2"
            android:layout_toRightOf="@+id/hotkey2"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_below="@+id/hotkey4"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/hotkey5"
            android:layout_toEndOf="@+id/hotkey7"
            android:layout_toRightOf="@+id/hotkey7"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/hotkey9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/hotkey6"
            android:layout_toEndOf="@+id/hotkey8"
            android:layout_toRightOf="@+id/hotkey8"
            android:text="9"
            android:textSize="40sp" />

    </RelativeLayout>

</LinearLayout>